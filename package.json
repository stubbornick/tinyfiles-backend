{
  "name": "tinyfiles-backend",
  "version": "0.0.1",
  "description": "TinyFiles - backend",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/src/server.js",
    "lint": "eslint src tests --ext .ts --quiet --fix",
    "test": "jest",
    "coverage": "jest --coverage",
    "docker_build": "sudo docker build -t tinyfiles --build-arg USER_ID=`id -u` --build-arg GROUP_ID=`id -g` .",
    "docker_start": "sudo docker run -p 127.0.0.1:3000:3000 --env APP_HOST=0.0.0.0 --rm --name=tinyfiles -v `pwd`/data:/app/data tinyfiles",
    "docker_stop": "sudo docker stop tinyfiles"
  },
  "author": "stubbornick",
  "license": "UNLICENSED",
  "devDependencies": {
    "@types/express": "^4.17.6",
    "@types/jest": "^25.2.1",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^7.2.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": ">=4",
    "jest": "^25.5.0",
    "lint-staged": ">=10",
    "prettier": "^2.0.5",
    "ts-jest": "^25.4.0",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@moebius/http-graceful-shutdown": "^1.1.0",
    "express": "^4.17.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix"
  }
}
